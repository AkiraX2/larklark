<UserControl x:Class="学比邻老师客户端.UI.Controls.AvatarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:学比邻老师客户端.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="170" d:DesignWidth="170">
    <Border BorderThickness="{Binding AvatarBorderThickness}" BorderBrush="#FDFEFF" CornerRadius="200">
        <Border.Background>
            <ImageBrush ImageSource="{Binding AvatarImage}" Stretch="Uniform" />
        </Border.Background>
        <Grid>
            <!--<Image Source="{Binding AvatarImage, Mode=OneWay}" />-->

        </Grid>
    </Border>
</UserControl>